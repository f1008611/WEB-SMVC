<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jaxws="http://cxf.apache.org/jaxws"
	xsi:schemaLocation="http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd"
	default-lazy-init="true">

	<!-- jax-ws endpoint定义 -->
	<jaxws:endpoint address="/helloCxfService">
		<jaxws:implementor ref="helloCxfService" />
	</jaxws:endpoint>
    <jaxws:endpoint address="/userService">
        <jaxws:implementor ref="userService" />
    </jaxws:endpoint>

	<!-- WebService的实现Bean定义 -->
	<bean id="helloCxfService" class="com.slin.smvc.service.impl.HelloCxfServiceImpl"/>
    <bean id="userService" class="com.slin.smvc.service.impl.UserServiceImpl"/>

</beans>